# Copy this file to .env and fill in your values.
# Never commit .env to source control.

# PostgreSQL connection string
# Example: postgres://user:password@host:5432/dbname
DATABASE_URL=postgres://user:password@localhost:5432/tiktok

# AWS credentials and region
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 bucket used for both source uploads and generated clips
S3_BUCKET_NAME=your-s3-bucket-name

# Public URL of the deployed Netlify site (used to invoke the background function)
# Netlify sets this automatically in production; set it locally for netlify dev.
URL=https://your-site.netlify.app

# Optional: length of each video clip in seconds (default: 60)
CLIP_DURATION=60
